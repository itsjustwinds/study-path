#include"function.h"

void input(int &n,pNode *&root){
	cin>>n;
	root=new pNode;
	pNode *cur=root;
	for (int i=0;i<n;++i){
		cur->pNext=new pNode;
		cur=cur->pNext;
		cin>>cur->val;
	}
	cur->pNext=nullptr;
	cur=root->pNext;
	delete root;
	root=cur;
}

void display(pNode *&root){
	if (root==nullptr) return;
	cout<<root->val<<" ";
	display(root->pNext);
}

void delete_pointer(pNode *&root){
	if (root==nullptr) return;
	delete_pointer(root->pNext);
	delete root;
}
